.fv_form{
	width: auto;
	display: block;
	position: relative;

	&.rows{
		.fv_field{
			>.fv_field_title{
				width: 20%;
				vertical-align: top;
			}
			>.fv_input_holder{
				width: 80%;
				display: inline-block;
			}
			>.fv_error_message{
				margin-left: 20%;
			}
		}
		.fv_field.fv_in_array{
			>.fv_input_holder{
				width: 100%;
			}
		}
		.fv_field.fv_in_key_value{
			>.fv_key_value_name_input{
				>.fv_input_holder{
					width: 100%;
				}
			}
		}
	}
}